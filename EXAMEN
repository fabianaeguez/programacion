#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
using namespace std;



void main()
{int n,s,sig,i;
 cout<<"ingrese un valor: ";
 cin>>n;
 s=0;
 sig=1;
 i=2;
 while(i<=n)
  { sig=sig*(-1);
    s=s+(i*sig);
	i=i+2;
  }
 cout<<"la suma es: "<<s<<endl;
 getch();
}

EJERCICIO 2
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
using namespace std;



void main()
{int n,s,pot,fact,i;
 float x;
 s=2;
 i=1;
 fact=1;
 cout<<"ingrese el valor de n: ";
 cin>>n;
 cout<<"ingrese el valor de x: ";
 cin>>x;
 while(i<=n)
  { pot=pow(x,i);
    fact=fact*i;
    s=s+(pot/fact);
    i=i+1;
  }
 cout<<"la suma es: "<<s<<endl;
 getch();

 }
