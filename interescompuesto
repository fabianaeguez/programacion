#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;

void main()
{int I,C,A,CF;
 float T;
 cout<<"ingrese el capital inicial"<<endl;
 cin>> C;
 cout<<"ingrese el porcentaje de interes"<<endl;
 cin>> T;
 cout<<"ingrese el tiempo"<<endl;
 cin>> A;
   CF= C*pow((1+T),A);
   I= CF-C;
 cout<<"el interes compuesto es: "<<endl;
 cout<<I;
 getch();

}
